{
	"name": "@drivenets/design-system",
	"version": "0.6.1",
	"license": "Apache-2.0",
	"type": "module",
	"types": "./dist/index.d.cts",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./index.min.css": "./dist/index.min.css",
		"./raw-styles/*": "./src/styles/*"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"LICENSE",
		"./dist",
		"./src",
		"!**/__tests__",
		"!./src/**/*.d.ts",
		"!**/stories",
		"!**/*.stories.*"
	],
	"repository": {
		"url": "https://github.com/drivenets/design-system",
		"directory": "/packages/design-system"
	},
	"scripts": {
		"lint": "pnpm generate-scss-dts && eslint --max-warnings=0 .; EXIT_CODE=$?; rm -rf .scss-dts; exit $EXIT_CODE",
		"typecheck": "pnpm generate-scss-dts && tsc; EXIT_CODE=$?; rm -rf .scss-dts; exit $EXIT_CODE",
		"generate-scss-dts": "typed-scss-modules ./src -o ./.scss-dts --nameFormat all --exportType default > /dev/null 2>&1",
		"storybook": "storybook dev -p 6006",
		"test": "vitest --project=\"!requires-build\"",
		"test:coverage": "pnpm test --coverage",
		"test:requires-build": "vitest --project=requires-build",
		"build": "tsdown",
		"build:watch": "pnpm build --watch",
		"build:storybook": "storybook build",
		"build:lint": "publint && attw --pack"
	},
	"dependencies": {
		"@ark-ui/react": "^5.31.0",
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/modifiers": "^9.0.0",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@radix-ui/react-visually-hidden": "^1.2.4",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/react-virtual": "^3.13.18",
		"@zag-js/react": "^1.33.1",
		"@zag-js/steps": "^1.33.1",
		"classnames": "^2.5.1"
	},
	"peerDependencies": {
		"@internationalized/date": "^3.0.0",
		"react": "^19",
		"react-dom": "^19"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@drivenets/vite-plugin-design-system": "workspace:*",
		"@faker-js/faker": "^10.3.0",
		"@hookform/resolvers": "^5.2.2",
		"@rollup/plugin-babel": "^6.1.0",
		"@storybook/addon-a11y": "^10.2.10",
		"@storybook/addon-docs": "^10.2.10",
		"@storybook/addon-vitest": "^10.2.10",
		"@storybook/builder-vite": "^10.2.10",
		"@storybook/react-vite": "^10.2.10",
		"@tanstack/react-query": "^5.90.21",
		"@tanstack/react-router": "^1.161.1",
		"@types/eslint-plugin-jsx-a11y": "^6.10.1",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@vitest/browser": "^4.0.18",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"babel-plugin-react-compiler": "^1.0.0",
		"eslint": "^9.39.2",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-storybook": "^10.2.10",
		"jsdom": "^28.1.0",
		"mockdate": "^3.0.5",
		"playwright": "^1.58.2",
		"postcss": "^8.5.6",
		"postcss-modules": "^6.0.1",
		"publint": "^0.3.17",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-hook-form": "^7.71.1",
		"rollup-plugin-sass": "^1.15.3",
		"sass-embedded": "^1.97.3",
		"storybook": "^10.2.10",
		"tsdown": "^0.20.3",
		"typed-scss-modules": "^8.1.1",
		"typescript": "^5.9.3",
		"typescript-plugin-css-modules": "^5.2.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"zod": "^4.3.6"
	}
}
